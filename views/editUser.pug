doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(rel='stylesheet' href='')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
.container
  h3 AUTHENTICATION 
  h4 User edit form
  br
  
  form.col-6(method="POST" action="/editeduser?id="+user._id name="editUser")
    .mb-3
      label.form-label(for='firstname') First name
      input#firstname.form-control(type='text' name='firstname' value=user.firstname)
    .mb-3
      label.form-label(for='surname') Surname
      input#surname.form-control(type='text' name='surname' value=user.surname)
    .mb-3
      label.form-label(for='email') Email
      input#email.form-control(type='email' name='email' value=user.email)
    
    .mb-3
      label.form-label(for='password') Password
      input#password.form-control(type='password' name='password' value=user.password disabled)
    .mb-3
      label.form-label(for='role') Role
      input#role.form-control(type='text' name='role' value=user.role)
    button.btn.btn-primary(type='submit') Submit
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
